  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.848.0",
    "@google/genai": "^1.10.0",
    "@langchain/aws": "^0.1.12",
    "@langchain/core": "0.3.66",
    "@langchain/google-genai": "^0.1.4",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@modelcontextprotocol/sdk": "^1.15.1",
